<div class="col-lg-10 ml-64 mr-5 mt-5">
  <div class="card mt-4 mr-4">
    <div class="card-body flex justify-between">
      <h5 class="text-lg font-bold">Add Category  / <a href="<%#=admin_category_index_path%>">Category List</a></h5>
      <div class="font-bold">
      </div>
    </div>
  </div>

</div>
<div class="ml-80">
  <div class="md:grid md:grid-cols-3 md:gap-6 ml-20">
    
    <div class="mt-5 md:mt-0 md:col-span-2">
      <form action="/admin/topic/create" method="POST">
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
          	<div class="col-span-6">
               <div class="col-span-6 sm:col-span-3">
                <label for="street_address" class="block text-sm font-bold text-gray-700">Category</label>
                 <select id="country" name="category_id" autocomplete="country" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <%Category.all.each do |cat|%>

                <option value="<%=cat.id%>"><%=cat.tilte%></option> <%end%>
                </select>
                <select id="country" name="subcategory_id" autocomplete="country" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <%Subcategory.all.each do |cat|%>

                <option value="<%=cat.id%>"><%=cat.title%></option> <%end%>
                </select>

                <select id="country" name="language_id" autocomplete="country" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <%Language.all.each do |cat|%>

                <option value="<%=cat.id%>"><%=cat.title%></option> <%end%>
                </select>
               
                </div><br>

              <div class="col-span-6">
                <label for="" class="block text-sm font-bold text-gray-700">Title</label>
                
                <textarea type="text" name="title" id="street_address" autocomplete="street-address" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Enter Title">
                  
                </textarea>
              </div>
          </div>
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Save
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>



    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script>
        // Initialize CKEditor
        CKEDITOR.replace('title');

        // Get the CKEditor instance
        var editor = CKEDITOR.instances['title'];

        // Get source code and display it
        document.getElementById('getSourceCode').addEventListener('click', function() {
            var sourceCode = editor.getData();
            document.getElementById('sourceCode').textContent = sourceCode;
        });
    </script>